<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBrackgroundWhite"
    tools:context="com.schelas.schelasvans.controller.CadastroPassageiro">

    <android.support.v7.widget.Toolbar
        android:id="@+id/destool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/imgNavBar"
            android:contentDescription="@string/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/actDetailVeic"
            android:textColor="@color/colorTextWhite"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shop"
                android:layout_width="134dp"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_veiculo_24dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_nomeVeiculo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/veiculoPlaceholderNome"
                        android:textSize="21sp"
                        android:textColor="@color/colorPrimaryText"
                        android:textStyle="bold"
                        android:paddingBottom="24dp"/>

                    <TextView
                        android:id="@+id/tv_placaVeiculo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placa"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorSecondaryText"/>


                    <TextView
                        android:id="@+id/tv_modeloVeiculo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/modelo"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorSecondaryText"/>

                    <TextView
                        android:id="@+id/tv_capacidadeVeiculoD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/capacidade"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorSecondaryText"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
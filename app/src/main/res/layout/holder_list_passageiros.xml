<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_shop_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@drawable/bg1">

        <ImageView
            android:id="@+id/imgPass"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_personw"/>


        <TextView
            android:id="@+id/namePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Nome do passageiro"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"
            android:layout_toEndOf="@id/imgPass"
            android:layout_alignTop="@id/imgPass"
            android:layout_toStartOf="@id/btnEdit"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>